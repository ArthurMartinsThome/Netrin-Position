@page "/map"
@rendermode InteractiveServer
@inject IJSRuntime JS

<h1>Google Maps</h1>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger" role="alert">
        @errorMessage
        <button type="button" class="btn-close" @onclick="ClearError"></button>
    </div>
}
@if (isLoading)
{
    <p>Carregando dados dos pontos...</p>
}
else if (!hasData)
{
    <p>Nenhum ponto encontrado.</p>
}
else
{
    <div id="map" style="width: 100%; height: 500px;"></div>
    <br />
    <div class="row">
        <div class="col-md-4">
            <div class="mb-3">
                <label class="form-label">Distância(km) entre os pontos:</label>
                <InputNumber class="form-control" @bind-Value="distance" />
            </div>
            <div class="mb-3">
                <label class="form-label">Quantidade mínima de pontos no quadrado:</label>
                <InputNumber class="form-control" @bind-Value="pointsQtd" />
            </div>
            <div class="mt-3">
                <button class="btn btn-primary" @onclick="HandleDistanceQuantityChange">Atualizar</button>
            </div>
        </div>
        <div class="col-md-8">
            <table class="table">
                <thead>
                    <tr>
                        <th>Visível</th>
                        <th>Nome</th>
                        <th>Latitude</th>
                        <th>Longitude</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var position in positions)
                    {
                        <tr>
                            <td>
                                <input type="checkbox"
                                       checked="@position.IsVisibleOnMap"
                                       @onchange="eventArgs => HandleVisibilityChange(position.Id.Value, (bool)eventArgs.Value)" />
                            </td>
                            <td>@position.Name</td>
                            <td>@position.Latitude</td>
                            <td>@position.Longitude</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}